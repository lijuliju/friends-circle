<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.friends.dao.DynamicLikeMapper">

    <sql id="Base_Column_List">
        id,
		dyna_id as dynaId,
		user_id as userId,
		addtime
    </sql>

    <sql id="userOrganizationJoins">
    </sql>

    <select
        id="findDynamicLikeList"
        resultType="com.friends.entity.DynamicLike">
        select
        <include refid="Base_Column_List"/>
        from fc_dynamic_like
       <where>
       	del_flag=0 
       	<if test="dynaId!=null">
       		and dyna_id = #{dynaId}
       	</if>
       </where>
       order by addtime desc
    </select>
    
    <select
        id="findDynamiclikeById"
        resultType="com.friends.entity.DynamicLike">
        select
        <include refid="Base_Column_List"/>
        from fc_dynamic_like
       <where>
       	id =#{id}
       </where>
    </select>
    
    <insert id="insert">
        insert into fc_dynamic_like (
	        id,
			dyna_id,
			user_id,
			addtime
        )value(
            #{id},
            #{dynaId},
            #{userId},
            #{addtime}
        )
    </insert>

    <update id="deleteDynamicLikeById">
         update fc_dynamic_like
        set del_flag = ${delFlag},del_time=${delTime}
        <where>
            id = #{id}
        </where>
    </update>


</mapper>
